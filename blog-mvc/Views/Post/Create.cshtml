@model blog_mvc.Models.Post

<div class="container margin-top-12">
    <div class="col-md-12">

        @using (Html.BeginForm("Create", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <h2>Create</h2>
            </div>

            @Html.AntiForgeryToken()

            <div class="form-group">
                @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                {
                    <div class="alert alert-danger">
                        <a href="#" class="close" data-dismiss="alert">×</a>
                        <h4>Validation Errors:</h4>
                        @Html.ValidationSummary(false)
                    </div>
                }
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @maxlength = "50" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Briefing, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Briefing, new { @class = "form-control", @maxlength = "100" })
            </div>

            <div class="form-group">
                <label class="control-label">Text</label>
                @Html.TextAreaFor(model => model.Textpost, new { @class = "form-control", @cols = 50, @rows = 15, @maxlength = "3000" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Picture, new { @class = "control-label" })
                <input type="file" name="picture" id="picture" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success pull-right col-md-2" />
                @Html.ActionLink("Cancel", "Index", "Post", new { @class = "btn btn-secondary pull-right col-md-2" })
            </div>
        }
    </div>
</div>
